<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>

<VBox fx:controller="calculator.Controller" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" fx:id="vbox">

    <stylesheets>
        <URL value="@/calculator/style.css"/>
    </stylesheets>

    <GridPane hgap="5" vgap="5" alignment="CENTER">
        <TextArea fx:id="txtArea" editable="false" prefRowCount="5" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="215"/>
    </GridPane>

    <Label></Label>

    <GridPane hgap="5" vgap="5" alignment="CENTER">
        <Button fx:id="btn1" onAction="#btn1Click" text="1" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="50" styleClass="nmbButton"/>
        <Button fx:id="btn2" onAction="#btn2Click" text="2" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="50" styleClass="nmbButton"/>
        <Button fx:id="btn3" onAction="#btn3Click" text="3" GridPane.rowIndex="0" GridPane.columnIndex="2" prefWidth="50" styleClass="nmbButton"/>
        <Button fx:id="btn4" onAction="#btn4Click" text="4" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="50" styleClass="nmbButton"/>
        <Button fx:id="btn5" onAction="#btn5Click" text="5" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="50" styleClass="nmbButton"/>
        <Button fx:id="btn6" onAction="#btn6Click" text="6" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="50" styleClass="nmbButton"/>
        <Button fx:id="btn7" onAction="#btn7Click" text="7" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="50" styleClass="nmbButton"/>
        <Button fx:id="btn8" onAction="#btn8Click" text="8" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="50" styleClass="nmbButton"/>
        <Button fx:id="btn9" onAction="#btn9Click" text="9" GridPane.rowIndex="2" GridPane.columnIndex="2" prefWidth="50" styleClass="nmbButton"/>
        <Button fx:id="btn0" onAction="#btn0Click" text="0" GridPane.rowIndex="3" GridPane.columnIndex="2" prefWidth="50" styleClass="nmbButton"/>

        <Button fx:id="btnPlus" onAction="#btnPlusClick" text="+" GridPane.rowIndex="0" GridPane.columnIndex="3" prefWidth="50"/>
        <Button fx:id="btnMinus" onAction="#btnMinusClick" text="-" GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="50"/>
        <Button fx:id="btnMult" onAction="#btnMultClick" text="*" GridPane.rowIndex="2" GridPane.columnIndex="3" prefWidth="50"/>
        <Button fx:id="btnDiv" onAction="#btnDivClick" text="/" GridPane.rowIndex="3" GridPane.columnIndex="3" prefWidth="50"/>

        <Button fx:id="btnEnter" onAction="#btnEnterClick" text="Enter" GridPane.rowIndex="3" GridPane.columnIndex="0" prefWidth="50" styleClass="cmdButton"/>
        <Button fx:id="btnClear" onAction="#btnClearClick" text="Clear" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="50" styleClass="cmdButton"/>

    </GridPane>

</VBox>